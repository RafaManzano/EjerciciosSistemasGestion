@model _14_PersonajesLoL_UI.Models.clsViewModel

@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Elegir Personaje</h4>
        @Html.DropDownListFor(m => m.Personaje.ID, new SelectList(Model.Personajes, "ID", "Alias"))
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="boton" type="submit" value="Elegir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

