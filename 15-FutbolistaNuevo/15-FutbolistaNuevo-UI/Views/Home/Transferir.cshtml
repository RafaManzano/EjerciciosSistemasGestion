@model _15_FutbolistaNuevo_UI.Models.clsViewModel

@{
    ViewBag.Title = "Transferir";
}

<h2>Transferencias</h2>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.JugadorSeleecionado.ID)
    @Html.HiddenFor(model => model.JugadorSeleecionado.Nombre)
    @Html.HiddenFor(model => model.JugadorSeleecionado.Apellidos)
    @Html.HiddenFor(model => model.JugadorSeleecionado.Posicion)
    @Html.HiddenFor(model => model.JugadorSeleecionado.Alias)
    <div>
        @Html.LabelFor(model => model.JugadorSeleecionado.Dorsal, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.JugadorSeleecionado.Dorsal, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div>
        <span class="control-label col-md-2">Equipo Transferido</span>
        @Html.DropDownListFor(m => m.JugadorSeleecionado.IDEquipo, new SelectList(Model.Equipos, "ID", "Nombre"), Model.JugadorSeleecionado.IDEquipo)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
